<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/len_12"
        android:paddingBottom="@dimen/len_4"
        tools:ignore="RtlSymmetry,UselessParent">

        <com.qingge.yangsong.common.widget.RoundImageView
            android:id="@+id/portrait"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="@dimen/len_68"
            android:layout_height="@dimen/len_52"
            android:layout_marginTop="@dimen/len_2"
            android:contentDescription="@string/app_name"

            android:src="@drawable/default_portrait" />

        <TextView
            android:id="@+id/text_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_4"
            android:layout_marginStart="@dimen/len_10"
            android:layout_toEndOf="@id/portrait"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="张二哥饭店"
            android:textColor="@color/black"
            android:textSize="@dimen/len_16" />

        <TextView
            android:id="@+id/text_shop_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginTop="@dimen/len_32"
            android:layout_toEndOf="@id/portrait"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="欢迎光临张二哥饭店! 支持预定"
            android:textColor="@color/black_alpha_80"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_76">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/len_88"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推"
                android:paddingStart="@dimen/len_20"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="荐"
                android:paddingStart="@dimen/len_20"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/len_88"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_marginStart="@dimen/len_16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/len_88"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <com.qingge.yangsong.common.widget.PortraitView
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:src="@drawable/ribendoufu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:text="日本豆腐"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/len_88"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <com.qingge.yangsong.common.widget.PortraitView
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:src="@drawable/suantairousi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:text="蒜苔肉丝"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/len_88"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <com.qingge.yangsong.common.widget.PortraitView
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:src="@drawable/mapodoufu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:text="麻婆豆腐"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>