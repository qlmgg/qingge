<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.main.CateringFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        app:elevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tab_catering"
                android:textAppearance="@style/TextAppearance.Title" />

        </FrameLayout>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/actionBarWithStatusBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_edit_shop"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:hint="@string/text_hint_shop"
            android:textColorHint="#bdbdbd"
            android:gravity="center"
            android:textSize="@dimen/font_14"
            android:background="@drawable/search_bar_gray"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/len_12"
            android:layout_marginEnd="@dimen/len_12"
            android:layout_height="@dimen/len_32"
            tools:ignore="RtlSymmetry"
             />

        <com.qingge.yangsong.common.widget.RoundImageView
            android:src="@drawable/guanggao"
            android:layout_marginStart="@dimen/len_12"
            android:layout_marginEnd="@dimen/len_12"
            android:layout_marginTop="@dimen/len_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_128" />

        <include
            android:layout_marginTop="@dimen/len_6"
            layout="@layout/item_catering_shop"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <include
            android:layout_marginTop="@dimen/len_16"
            layout="@layout/item_catering_shop"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>


</FrameLayout>