<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/len_20"
    android:paddingEnd="@dimen/len_20">

    <com.qingge.yangsong.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/len_48"
        android:layout_height="@dimen/len_48"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginBottom="@dimen/len_8"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginTop="@dimen/len_4"
        android:maxLength="12"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16"
        app:layout_constraintStart_toEndOf="@id/im_portrait"
        app:layout_constraintTop_toTopOf="@id/im_portrait" />

    <TextView
        android:id="@+id/txt_contacts_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_4"
        android:maxLength="36"
        android:text="我是联系人的xxxx我是联系人的xxxx哈哈我是联系人的xxxx哈哈哈哈哈哈我是联系人的xxxx哈哈哈哈哈哈我是联系人的xxxx哈哈哈哈哈哈我是联系人的xxxx哈哈哈哈"
        android:textColor="@color/grey_700"
        android:textSize="@dimen/font_10"
        app:layout_constraintBottom_toBottomOf="@id/im_portrait"
        app:layout_constraintLeft_toLeftOf="@id/txt_contacts_name" />
</android.support.constraint.ConstraintLayout>