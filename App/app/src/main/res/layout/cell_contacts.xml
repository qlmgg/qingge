<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_16">

    <com.qingge.yangsong.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/len_44"
        android:layout_height="@dimen/len_44"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/len_10"
        android:src="@color/black" />

    <TextView
        android:id="@+id/txt_contacts_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_24"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/im_portrait"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/app_name"

        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_16"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/txt_contacts_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_12"
        android:layout_marginBottom="@dimen/len_4"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/image_view_describe"
        android:textColor="@color/grey_700"
        android:textSize="@dimen/font_10"
        android:layout_below="@id/txt_contacts_name"
        android:layout_toEndOf="@id/im_portrait"
        tools:ignore="RtlSymmetry" />
</RelativeLayout>