<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_8"
    android:orientation="vertical">

    <com.qingge.yangsong.common.widget.RoundImageView
        android:id="@+id/group_pic"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:src="@drawable/guanggao" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_2"
        android:text="@string/app_name"
        android:textColor="@color/black" />
</LinearLayout>