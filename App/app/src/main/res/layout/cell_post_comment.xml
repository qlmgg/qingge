<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/len_14"
    android:paddingTop="@dimen/len_4">
    <!--头像 名字 时间 类容 赞 二级评论-->
    <com.qingge.yangsong.common.widget.PortraitView
        android:id="@+id/portrait"
        android:layout_width="@dimen/len_36"
        android:layout_height="@dimen/len_36"
        android:src="@drawable/default_banner_group" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_10"
        android:layout_marginEnd="@dimen/len_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隔壁小刘"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_2"
            android:text="5/6 12:30"
            android:textColor="@color/grey_400"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/txt_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_6"
            android:text="我觉得你这句话还是说的有道理的,不管从什么时候,我都会抱有一颗对外面的探索之心"
            android:textColor="@color/black" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_click_zan"
                android:layout_width="@dimen/len_44"
                android:layout_height="@dimen/len_44"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/len_6"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/len_12"
                android:src="@drawable/ic_zan" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>