<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/CollapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/colorAccent"
                app:expandedTitleGravity="center"
                app:expandedTitleMarginBottom="@dimen/len_96"
                app:expandedTitleTextAppearance="@style/TextAppearance.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:title="梦青鸽">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_256"
                    android:contentDescription="@string/app_name"
                    android:foreground="@color/black_alpha_48"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_20"
                    android:layout_marginTop="@dimen/len_172"
                    android:text="关注 : 2888"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_20"
                    android:layout_marginTop="192dp"
                    android:text="粉丝 : 6666"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

                <com.qingge.yangsong.common.widget.PortraitView
                    android:id="@+id/PortraitView"
                    android:layout_width="@dimen/len_72"
                    android:layout_height="@dimen/len_72"
                    android:layout_marginStart="@dimen/len_24"
                    android:layout_marginTop="@dimen/len_76"
                    android:src="@drawable/default_portrait" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:paddingTop="@dimen/statusBarSize">

                </android.support.v7.widget.Toolbar>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_36"
                    android:layout_gravity="bottom"
                    android:background="@drawable/layout__border"
                    app:tabIndicatorColor="@color/light_green_400"
                    app:tabSelectedTextColor="@color/light_green_400"
                    app:tabTextColor="@color/grey_500">

                    <android.support.design.widget.TabItem
                        android:layout_width="@dimen/len_36"
                        android:layout_height="wrap_content"
                        android:text="@string/text_order" />

                    <android.support.design.widget.TabItem
                        android:layout_width="@dimen/len_36"
                        android:layout_height="wrap_content"
                        android:text="@string/text_Collection" />

                    <android.support.design.widget.TabItem
                        android:layout_width="@dimen/len_36"
                        android:layout_height="wrap_content"
                        android:text="@string/text_shop" />

                    <android.support.design.widget.TabItem
                        android:layout_width="@dimen/len_36"
                        android:layout_height="wrap_content"
                        android:text="@string/text_dynamic" />
                </android.support.design.widget.TabLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <!--android:background="@drawable/layout__border"-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>