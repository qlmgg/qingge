<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_4"
    android:background="@color/white"
    android:foreground="@drawable/ic_touch_fg"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_10"
    android:paddingEnd="@dimen/len_16"
    android:paddingBottom="@dimen/len_10">

    <com.qingge.yangsong.common.widget.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/len_44"
        android:layout_height="@dimen/len_44"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/default_portrait" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/len_56"
        android:layout_marginEnd="@dimen/len_60"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_16"
        tools:text="Mary HarmonMary Harmon" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/len_56"
        android:layout_marginTop="@dimen/len_28"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="32"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/font_12"
        tools:text="Mary Harmon" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_24"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="32"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/font_12"
        tools:text="17-04-12" />
</FrameLayout>