<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/text_all_group"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/font_14" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_6"
        android:background="@color/grey_300"
        android:contentDescription="@string/app_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/len_6" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_6"
        android:background="@color/grey_300"
        android:contentDescription="@string/app_name" />


    <ImageView

        android:id="@+id/im_follow"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/len_44"
        android:layout_height="@dimen/len_44"
        android:background="@drawable/layout_border"
        android:layout_marginTop="@dimen/len_6"
        android:layout_marginBottom="@dimen/len_6"
        android:contentDescription="@string/app_name"
        android:paddingStart="@dimen/len_14"
        android:paddingTop="@dimen/len_12"
        android:paddingEnd="@dimen/len_10"
        android:paddingBottom="@dimen/len_10"
        android:src="@drawable/ic_create_group"
        android:tint="@color/white_alpha_208" />

</LinearLayout>